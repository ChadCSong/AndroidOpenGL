    <Button
        android:id="@+id/mChangeMp4"
        style="@style/dialog"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:text="change"
        app:layout_constraintBottom_toTopOf="@+id/mSwitchCamera"
        app:layout_constraintEnd_toEndOf="@+id/mSwitchCamera"
        app:layout_constraintStart_toStartOf="@+id/mSwitchCamera" />

    <Button
        android:id="@+id/mSwitchCamera"
        style="@style/dialog"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginBottom="20dp"
        android:text="switch"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/mPlayMp4"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/mPlayNewMp4"
        style="@style/dialog"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:text="playNew"
        app:layout_constraintBottom_toTopOf="@+id/mPlayMp4"
        app:layout_constraintEnd_toEndOf="@+id/mPlayMp4"
        app:layout_constraintStart_toStartOf="@+id/mPlayMp4" />

    <Button
        android:id="@+id/mPlayMp4"
        style="@style/dialog"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="20dp"
        android:text="play"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/mSwitchCamera" />
</android.support.constraint.ConstraintLayout>
